rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read/write access to waiting-list collection
    match /waiting-list/{document} {
      allow read, write: if true;
    }
    
    // Allow querying the waiting-list collection for email existence checks
    match /waiting-list {
      allow read: if true;
    }
    
    // Allow read access to all documents (for admin purposes)
    match /{document=**} {
      allow read: if true;
    }
  }
} 